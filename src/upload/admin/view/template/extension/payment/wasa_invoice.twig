{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-wasa" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_edit }}
                </h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-wasa" class="form-horizontal">
                    <ul class="nav nav-tabs">
                        <li class="active" id="li-tab-settings"><a href="#tab-settings" data-toggle="tab">{{ tab_settings }}</a></li>
                        <li class="" id="li-tab-montly-cost"><a href="#tab-montly-cost" data-toggle="tab">{{ tab_monthly_cost }}</a></li>
                        <li class="" id="li-tab-order-status"><a href="#tab-order-status" data-toggle="tab">{{ tab_order_status }}</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-settings">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_client_id">{{ entry_client_id }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_wasa_invoice_client_id" value="{{ payment_wasa_invoice_client_id }}" id="payment_wasa_invoice_client_id" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_secret_key">{{ entry_secret_key }}</label>
                                <div class="col-sm-10">
                                    <input type="password" name="payment_wasa_invoice_secret_key" value="{{ payment_wasa_invoice_secret_key }}" id="payment_wasa_invoice_secret_key" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_test_mode">
                                    {{ entry_test_mode }}
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_test_mode" id="payment_wasa_invoice_test_mode" class="form-control">
                                        {% if payment_wasa_invoice_test_mode == 1 %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_status" id="payment_wasa_invoice_status" class="form-control">
                                        {% if payment_wasa_invoice_status == 1 %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-montly-cost">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_show_widget">{{ entry_show_widget }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_show_widget" id="payment_wasa_invoice_show_widget" class="form-control">
                                        {% if payment_wasa_invoice_show_widget == 1 %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_widget_size">{{ entry_widget_size }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_widget_size" id="payment_wasa_invoice_widget_size" class="form-control">
                                        {% for key, size in widget_sizes %}
                                            {% if key == payment_wasa_invoice_widget_size %}
                                                <option value="{{ key }}" selected="selected">{{ size }}</option>
                                            {% else %}
                                                <option value="{{ key }}">{{ size }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-order-status">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_created_order_status_id">
                                    <span data-toggle="tooltip" title="{{ help_created_order_status }}">{{ entry_created_order_status }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_created_order_status_id" id="payment_wasa_invoice_created_order_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_wasa_invoice_created_order_status_id %}
                                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
                                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_initialized_order_status_id">
                                    <span data-toggle="tooltip" title="{{ help_initialized_order_status }}">{{ entry_initialized_order_status }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_initialized_order_status_id" id="payment_wasa_invoice_initialized_order_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_wasa_invoice_initialized_order_status_id %}
                                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
                                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_pending_order_status_id">
                                    <span data-toggle="tooltip" title="{{ help_pending_order_status }}">{{ entry_pending_order_status }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_pending_order_status_id" id="payment_wasa_invoice_pending_order_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_wasa_invoice_pending_order_status_id %}
                                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
                                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_ready_order_status_id">
                                    <span data-toggle="tooltip" title="{{ help_ready_order_status }}">{{ entry_ready_order_status }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_ready_order_status_id" id="payment_wasa_invoice_ready_order_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_wasa_invoice_ready_order_status_id %}
                                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
                                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_shipped_order_status_id">
                                    <span data-toggle="tooltip" title="{{ help_shipped_order_status }}">{{ entry_shipped_order_status }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_shipped_order_status_id" id="payment_wasa_invoice_shipped_order_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_wasa_invoice_shipped_order_status_id %}
                                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
                                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_wasa_invoice_canceled_order_status_id">
                                    <span data-toggle="tooltip" title="{{ help_canceled_order_status }}">{{ entry_canceled_order_status }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_wasa_invoice_canceled_order_status_id" id="payment_wasa_invoice_canceled_order_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_wasa_invoice_canceled_order_status_id %}
                                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
                                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
